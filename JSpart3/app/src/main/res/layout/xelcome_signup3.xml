<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/welcome_slide2_toolbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/overcast"
        android:titleTextColor="#000">

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_below="@id/welcome_slide2_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/logo1">
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="60sp"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@color/background_color">

        <TextView
            android:id="@+id/xd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="28dp"
            android:text="Job Description "
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <Spinner
            android:id="@+id/xEmployeeCareerLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:entries="@array/country_arrays"
            android:prompt="@string/country_prompt"
            android:spinnerMode="dialog"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"/>
        <Spinner
            android:id="@+id/xEmployeeEducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/education_arrays"
            android:prompt="@string/education_prompt"
            android:spinnerMode="dialog"
            android:gravity="center"
            android:textSize="22dp"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <Spinner
            android:id="@+id/xEmployeeNumbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number Of Position"
            android:entries="@array/numbers_arrays"
            android:prompt="@string/numbers_prompt"
            android:spinnerMode="dialog"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="22dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <Spinner
            android:id="@+id/xEmployeeSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:hint="Salary"
            android:entries="@array/salary_arrays"
            android:prompt="@string/salary_prompt"
            android:spinnerMode="dialog"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <EditText
            android:id="@+id/xEmployeeSkillSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:hint="Skills"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>


</RelativeLayout>
